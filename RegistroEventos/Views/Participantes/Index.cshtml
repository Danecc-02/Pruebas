@model IEnumerable<RegistroEventos.Models.Participante>

@{
    ViewData["Title"] = "Lista-participantes";
}
<link rel="stylesheet" href="~/css/Style-vistas.css" />




<div class="panel-izquierdo">
	<img id="logo-principal" src="img/fihnec-logo.png" >

</div>
<a type="button" class="btn btn-outline-dark boton-panel" asp-action="Create" >Agregar</a>
<a class="btn btn-outline-dark boton-inicio" asp-area="" asp-controller="Home" asp-action="Index">Menú</a>
    <h4 class="txt-h4">Lista de Participantes</h4>
	



<table class="table table-hover tabla-datos">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nombre_participante)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.apellido_participante)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dni_participante)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Capitulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.telefono)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombre_participante)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.apellido_participante)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dni_participante)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capitulo.nombre_capitulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.telefono)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-outline-dark btn-action" asp-route-id="@item.id_participante">Editar</a>
               
                <a asp-action="Details" class="btn btn-outline-dark btn-action" asp-route-id="@item.id_participante">Detalle</a>
        
                <a asp-action="Delete" class="btn btn-outline-dark btn-action" asp-route-id="@item.id_participante">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
