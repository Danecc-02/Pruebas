@model RegistroEventos.Models.Participante

@{
    ViewData["Title"] = "Editar-participante";
}

<link rel="stylesheet" href="~/css/Style-crud.css" />
<link rel="stylesheet" href="~/img/fihnec-logo.png" />
<h4 class="txt-h4">Editar Participante</h4>

<img id="logo-participantes" src="~/img/fihnec-logo.png"/>
<div class="cont-add-parti">
    
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id_participante" />
            <div class="form-group p1">
                <label asp-for="nombre_participante" class="control-label"></label>
                <input asp-for="nombre_participante" class="form-control" />
                <span asp-validation-for="nombre_participante" class="text-danger"></span>
            </div>
            <div class="form-group p2">
                <label asp-for="apellido_participante" class="control-label"></label>
                <input asp-for="apellido_participante" class="form-control" />
                <span asp-validation-for="apellido_participante" class="text-danger"></span>
            </div>
            <div class="form-group p3">
                <label asp-for="dni_participante" class="control-label"></label>
                <input asp-for="dni_participante" class="form-control" />
                <span asp-validation-for="dni_participante" class="text-danger"></span>
            </div>
            <div class="form-group p4">
                <label asp-for="id_capitulo" class="control-label"></label>
                <select asp-for="id_capitulo" class="form-control" asp-items="ViewBag.id_capitulo"></select>
                <span asp-validation-for="id_capitulo" class="text-danger"></span>
            </div>
            <div class="form-group p5">
                <label asp-for="telefono" class="control-label"></label>
                <input asp-for="telefono" class="form-control" />
                <span asp-validation-for="telefono" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-outline-dark boton-guardar" />
                 <a class="btn btn-outline-dark boton-cancelar" asp-action="Index">Cancelar</a>
            </div>
        </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
